@using ffxiv_apps.Domain

<div class="row">

    @if (Items.Length == 0)
    {
        <div class="col-5 col-md-3 text-end">텅!</div>
    }
    else
    {
        @foreach (var item in Items)
        {
            <div class="row">
                <div class="col-5 col-md-9">@item.YearMonthFormat: @item.PriceSum.ToString("N0")</div>
            </div>
        }
    }
</div>

@code {
    [Parameter] public RecentSoldPriceSum[] Items { get; set; } = [];
}
