    private async Task LoadSoldItem()
    {
        _soldItems = await GetSoldItems();

        _totalPrice = _soldItems
            .Sum(item => item.Price) ?? 0;

        await _grid.RefreshDataAsync();
    }

    private async Task SoldItemReload()
    {
        try
        {
            PreloadService.Show();

            await LoadSoldItem();
        }
        catch (Exception e)
        {
            NotifySystemError(e.Message);
        }
        finally
        {
            PreloadService.Hide();
